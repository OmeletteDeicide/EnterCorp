{% extends 'base.html.twig' %}

{% block title %}SubjectsInMyMind!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Les sujets ✅</h1>
        <a href="{{ path('app_form_subject') }}" class="btn btn-success">
            Créer un Sujet.
        </a>
        <div class="d-grid">
		{% for subject in subjects %}
			<div >
			<a href="{{ path('subject_show', {'id': subject.id}) }}">
				<h3>{{ subject.name }}</h3>
                <span>  </span>
				{# Affichez d'autres propriétés de l'entité Sujet ici, si nécessaire #}
			</a>
			</div>
		{% endfor %}
        </div>
	{% endblock %}
