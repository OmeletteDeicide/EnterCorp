{% extends 'base.html.twig' %}

{% block title %}SubjectsInMyMind!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<h1 class="m-auto">Bienvenu dans la categorie : {{ subject.title }} </h1>
<div class="container">
{% for message in messages %}
    <a href=""class"block-message">
    {{ message.user.pseudo }}
    <div class="block-title">{{ message.content }}</div>
    </a>   
{% endfor %}
</div>
{{form_start(messageForm)}}
{{form_end(messageForm)}}
{% endblock %}
