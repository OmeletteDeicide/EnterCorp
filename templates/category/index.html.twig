{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Les categories ✅</h1>
        <a href="{{ path('app_form_category') }}" class="btn btn-success">
            Créer une categorysym
        </a>
        <div class="d-grid">
		{% for category in categories %}
			<div>
			<a href="{{ path('category_show', {'id': category.id}) }}">
				<h3>{{ category.name }}</h3>
                <span>  </span>
				{# Affichez d'autres propriétés de l'entité Category ici, si nécessaire #}
			</a>
			</div>
		{% endfor %}
        </div>
	{% endblock %}
